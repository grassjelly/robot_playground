<launch>
    <!-- <arg name="config" value="front_laser"/> -->
    <!-- <arg name="config" value="kinect"/> -->
    <!-- <arg name="config" value="velodyne"/> -->
    <!-- <arg name="config" value="pan_tilt"/> -->
    <arg name="config" default="hybrid"/>
    <arg name="robot_name" default="/" />
    <arg name="pos_x" default="0.0" />
    <arg name="pos_y" default="0.0" />

    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="world_name" default="$(find robot_playground)/worlds/default.world" />

    <!-- Load Jackal's description, controllers, and teleop nodes. -->
    <include file="$(find jackal_description)/launch/description.launch">
        <arg name="config" value="$(arg config)" />
    </include>

    <include file="$(find jackal_control)/launch/control.launch" />
    
    <include file="$(find jackal_control)/launch/teleop.launch">
        <arg name="joystick" value="false"/>
    </include>

    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
            args="-urdf -model $(arg robot_name) -robot_namespace $(arg robot_name) -param robot_description -x $(arg pos_x) -y $(arg pos_y) -z 1.0" />
    
    <!-- Publish static transform from base_footprint to base_link -->
    <node pkg="tf" type="static_transform_publisher" name="base_footprint_to_base_link" args="0 0 0.098 0 0 0  base_footprint base_link  100"/>
</launch>
